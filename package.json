{
  "name": "58-helper",
  "displayName": "58helper",
  "description": "58 vscode 帮助插件",
  "repository": "https://github.com/yanquankun/58helper",
  "publisher": "yanquankun",
  "version": "0.0.2",
  "icon": "logo.svg",
  "engines": {
    "vscode": "^1.80.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "58helper",
      "properties": {
        "58helperConfig.weekday": {
          "type": "string",
          "default": "4",
          "description": "周报提醒触发weekday[周日-周一为0-6]"
        },
        "58helperConfig.zbtime": {
          "type": "string",
          "default": "18:00",
          "description": "周报提醒触发时间，格式为HH:MM"
        }
      }
    },
    "commands": [
      {
        "command": "58-close-zb-notice",
        "title": "58helper周报关闭提醒"
      },
      {
        "command": "58-vscode-restart",
        "title": "58helper刷新vscode"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dayjs": "^1.11.11"
  }
}
